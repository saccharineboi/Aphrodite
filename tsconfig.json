{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "declaration": true,
    "allowJs": false,
    "outDir": "./build",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "types": ["@webgpu/types",
              "@types/mocha",
              "@types/dat.gui"],
    "baseUrl": "./"
  },
  "exclude": [
      "./node_modules/**/*",
      "./build/**/*",
      "./tests/**/*"
  ]
}
