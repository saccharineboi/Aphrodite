{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "allowJs": false,
    "outDir": "./build",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "types": ["@webgpu/types", "@types/mocha"],
    "baseUrl": "./",
    "paths": {
        "@aphrodite/*": ["src/*"]
    }
  },
  "exclude": [
      "./node_modules/**/*",
      "./build/**/*",
      "./tests/**/*"
  ]
}
